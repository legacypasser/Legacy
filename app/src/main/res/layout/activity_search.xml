<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androider.legacy.activity.SearchActivity">

    <include layout="@layout/common_toolbar"/>
        <LinearLayout
            android:background="@color/text_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/key_word"
                app:met_baseColor="@color/primary_text"
                app:met_primaryColor="@color/primary_color"
                android:textSize="16sp"
                app:met_iconLeft="@drawable/ic_search_white_36dp"
                app:met_iconPadding="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/search_input"/>
            <com.gc.materialdesign.views.ButtonFlat
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="@string/search"
                android:background="@color/primary_color"
                android:id="@+id/search_confirm"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/search_holder"/>

</LinearLayout>
