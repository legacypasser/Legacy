<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:id="@+id/search_card">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <com.joooonho.SelectableRoundedImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/search_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/search_img"
            android:layout_toEndOf="@id/search_img"
            android:textColor="@color/primary_text"
            android:layout_alignTop="@id/search_img"
            android:textSize="16sp"
            android:id="@+id/search_title"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/search_title"
            android:layout_alignStart="@id/search_title"
            android:layout_alignParentBottom="true"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:text="深圳"
            android:id="@+id/search_pos"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/search_pos"
            android:layout_toEndOf="@id/search_pos"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/search_pub"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:id="@+id/search_price"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>