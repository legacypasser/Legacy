<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fabs="http://schemas.android.com/apk/res-auto"
    tools:context="com.androider.legacy.activity.PublishActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/img_holder">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/pusher"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="end">
                <com.getbase.floatingactionbutton.AddFloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fabs:fab_colorPressed="@color/pressed"
                    android:id="@+id/start_cap"
                    android:visibility="visible"/>
            </RelativeLayout>
        </FrameLayout>
            <com.gc.materialdesign.views.ButtonFlat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cap_switch"
                android:text="@string/cap_finish"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_icon"
            android:rowCount="2"
            android:columnCount="4"
            android:id="@+id/cap_holder">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_to_photos_grey600_48dp"/>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_primary_color"
            android:padding="16dp"
            android:minHeight="480dp"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                fabs:met_floatingLabel="highlight"
                fabs:met_floatingLabelTextSize="16sp"
                fabs:met_floatingLabelText="@string/legacy_des"
                fabs:met_primaryColor="@color/primary_color"
                fabs:met_baseColor="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/legacy_story"
                fabs:met_maxCharacters="20"
                android:id="@+id/des_to_publish"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="end">
        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:layout_width="wrap_content"
            fabs:fab_colorPressed="@color/pressed"
            android:layout_height="wrap_content"
            android:id="@+id/publish"/>
    </RelativeLayout>

</FrameLayout>
